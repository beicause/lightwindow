<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/blue_boder">

    <ImageView
        android:id="@+id/iv_zoom_drag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zoom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/zoom" />

    <ImageView
        android:id="@+id/iv_down_h"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/down_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_zoom_drag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_zoom_drag"
        android:contentDescription="@string/down_h" />

    <ImageView
        android:id="@+id/iv_down_v"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/down_v"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_zoom_drag"
        app:layout_constraintTop_toBottomOf="@+id/iv_zoom_drag"
        android:contentDescription="@string/down_v" />

    <ImageView
        android:id="@+id/iv_up_v"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/up_v"
        app:layout_constraintBottom_toTopOf="@+id/iv_zoom_drag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_zoom_drag"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/up_v" />

    <ImageView
        android:id="@+id/iv_up_h"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/up_h"
        app:layout_constraintBottom_toTopOf="@+id/iv_zoom_drag"
        app:layout_constraintEnd_toStartOf="@+id/iv_zoom_drag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/up_h" />
</androidx.constraintlayout.widget.ConstraintLayout>