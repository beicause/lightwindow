<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.qingcheng.floatwindow.SettingsFragment"
        android:label="设置" />
    <fragment
        android:id="@+id/MainFragment"
        android:name="com.qingcheng.floatwindow.MainFragment"
        android:label="控制台"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_MainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_MainFragment_to_guideFragment"
            app:destination="@id/guideFragment" />
    </fragment>
    <fragment
        android:id="@+id/guideFragment"
        android:name="com.qingcheng.floatwindow.GuideFragment"
        android:label="使用说明"
        tools:layout="@layout/fragment_guide" />
</navigation>